<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Buttons for uploading -->
    <Button
        android:id="@+id/btn_upload_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_take_photos"
        android:onClick="uploadPhotos" />

    <!-- Buttons for processing PCA -->
    <Button
        android:id="@+id/btn_process_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_process_photos"
        android:onClick="processPhotos" />

    <!-- Buttons for resetting database -->
    <Button
        android:id="@+id/btn_reset_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_reset_db"
        android:onClick="resetDbPCA" />

    <!-- Layout for RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
